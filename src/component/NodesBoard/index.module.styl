.NodesBoard
  content ''
  --translate-x 0px
  --translate-y 0px
  --scale-x 1
  --scale-y 1
  --cell-size-x 1px
  --cell-size-y 1px

  --grid-color #808080

  user-select none
  position relative
  overflow hidden
  width 100%
  height 100%
  transform-origin 0px 0px
  background-image \
    repeating-linear-gradient(var(--grid-color) 0 1px, transparent 1px 100%),
    repeating-linear-gradient(90deg, var(--grid-color) 0 1px, transparent 1px 100%)
  background-size \
    calc(var(--cell-size-x) * var(--scale-x)) \
    calc(var(--cell-size-y) * var(--scale-y))
  background-position var(--translate-x) var(--translate-y)


.ActionDetector
  width 100%
  height 100%
  cursor grab
